@model AnkitSinghAssignments.Models.UserComment

@{
    ViewBag.Title = "Create";
}

<div class="container">

    <div class="mb-3">
        @Html.ActionLink("Home", "Index", "Assignment1", new object { }, new { @class = "btn btn-primary" })
        @Html.ActionLink("View comments", "Index", "Assignment7", new { @class = "btn btn-primary" })
    </div>
    <div class="row">
        <div class=" col-md-8 offset-2 col-md-offset-2">
            <div class="card border-primary">
                <div class="col-md-6 card-body offset-3">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Add comments</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Comments, htmlAttributes: new { @class = "control-label" })
                                <div class="col-md-12">
                                    @Html.TextAreaFor(model => model.Comments, new
                               {
                                       @class = "form-control",
                                       cols = 50,


                               })
                                    @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Comment" class="btn  btn-primary btn-lg" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
