@model IEnumerable<AnkitSinghAssignments.Models.UserComment>
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/css/Site.css" rel="stylesheet" />
<div class="container my-3">
    @Html.ActionLink("Home", "Index", "Assignment1", new object { }, new { @class = "btn btn-primary" })
    <div class="card border-primary mb-3">
        <div class="card-body text-center">
            <h5 class="text-danger"><b>Implemented using common layout showing common header, footers and navigation.</b></h5>
            <h4 class="card-title">Click here to share your comments.</h4>
            @Html.ActionLink("Comment here", "Create", "Assignment7", new { @class = "btn btn-warning" })
        </div>
    </div>
</div>

<div class="container post-comments">
    <div class="row">
        <div class="col-md-12">
            <h3>Comments</h3>
        </div><!-- /col-md-12 -->
    </div><!-- /row -->
    @foreach (var item in Model)
    {
        <div class="row my-3 offset-2">
            <div class="col-md-1">
                <img class="img-thumbnail avatar-outer img-responsive user-photo" src="~/Assets/images/human.png" height="90px" width="90px">
            </div>
            <div class="col-md-7">
                <div class="card card-info">
                    <div class="card-header  bg-primary">
                        <strong class="text-light">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </strong>
                    </div>
                    <div class="card-body">
                        @Html.Raw(item.Comments)
                    </div><!-- /panel-body -->
                </div><!-- /panel panel-default -->
            </div><!-- /col-md-5 -->
        </div><!-- /row -->
    }
</div><!-- /container -->
