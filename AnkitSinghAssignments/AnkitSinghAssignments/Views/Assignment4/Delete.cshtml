@model AnkitSinghAssignments.Models.GuestList
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Assignment";

}
<div class="container">
    <div class="jumbotron header-message">
        <div class="container" id="mainContent">
            <div class="btn btn-white btn-lg">@Html.ActionLink("Home", "Index", "Assignment1")</div>
            <div class="btn btn-white btn-lg">@Html.ActionLink("Back", "Index")</div>
            <div class="row"> 
               
                <div class="col-md-6 offset-3  bs-docs-section">
                    <h3 class="text-danger bg-light">Are you sure you want to delete this?</h3>
                    <div class="col-md-12 text-center">
                        <img class="rounded-circle" src="~/Assets/images/person.jpg" width="150" height="120" />
                        <h3 class="font-weight-bold">  @Html.DisplayFor(model => model.Name)</h3>
                    </div>
                    <div class="row">
                        <h4 class="col-md-6 font-weight-bold"> Email: </h4>
                        <h4 class="col-md-6 ">    @Html.DisplayFor(model => model.Email) </h4>
                    </div>
                    <div class="row">
                        <h4 class="col-md-6 font-weight-bold"> Phone: </h4>
                        <h4 class="col-md-6"> @Html.DisplayFor(model => model.Phone)</h4>
                    </div>
                    <div class="row">
                        <h4 class="font-weight-bold col-md-6"> Will Attend: </h4>
                        @if (Model.WillAttend == true)
                        {
                            <h4 class="col-md-6 ">Yes</h4>
                        }
                        else
                        {
                            <h4 class="col-md-6 ">No</h4>
                        }
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-block btn-danger btm-lg" />
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
